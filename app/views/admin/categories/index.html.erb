<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('.admin_th_title') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td><%= link_to t('.admin_edit_category_link'), edit_admin_category_path(category), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to t('.admin_destroy_category_link'), admin_category_path(category), method: :delete, data: { confirm: t('.admin_destroy_confirm_categories') }, class: "btn btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

