<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Email</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

<p><%= link_to 'Add a new contact', new_contact_path, class: "btn btn-primary btn-lg active" %></p>
