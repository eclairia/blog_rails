<h1>Articles</h1>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

<table class="table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to admin_article_showAdmin_path(article) do %>
        <%= article.title %>
      <% end %></td>
      <td><%= article.text %></td>
      <% if !article.online %>
        <td><%= link_to 'Edit', edit_admin_article_path(article), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg" %></td>
        <td><%= link_to 'Publish this article', publish_article_path(article) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'Add a new article', new_admin_article_path, class: "btn btn-default btn-lg" %></p>
