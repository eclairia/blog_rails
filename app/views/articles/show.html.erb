    <h2 class="text-center"><%= @article.title %></h2>
    <p><img src="<%= @article.url_picture %>" width="100%" heigth="200px"></p>
    <p class="text-center lead"><%= @article.text %></p>
    <br>
  </div>
</div>
<div class="col-md-10 col-md-offset-1">
  <div class="jumbotron">
