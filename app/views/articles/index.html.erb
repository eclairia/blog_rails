<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table class="table table-stripped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article_showAdmin_path(article), class: "btn btn-link btn-sm active" %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-lg active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

<p><%= link_to 'Add a new article', new_article_path, class: "btn btn-primary btn-lg active" %></p>
