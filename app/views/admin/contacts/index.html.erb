<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('.admin_th_name') %></th>
      <th><%= t('.admin_th_email') %></th>
      <th><%= t('.admin_th_message') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= link_to t('.admin_edit_contact_link'), edit_admin_contact_path(contact), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to t('.admin_destroy_contact_link'), admin_contact_path(contact), method: :delete, data: { confirm: t('.admin_destroy_confirm_contacts') }, class: "btn btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>