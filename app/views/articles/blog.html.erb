<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% @articles.each do |article| %>
    <div class="row">
     <p><div class="col-md-10 col-md-offset-1">
        <%= link_to article_path(article) do %>
          <p><%= article.title %><p>
        <% end %>
        <p><%= article.text %></p>
      </div></p>
    </div>
<% end %>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>