<%= form_with(model: [ @article, @article.comments.build], local: true) do |f| %>

    <div class="form-group">
      <%= f.label :auteur %>
      <%= f.text_field :commenter, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :contenu %>
      <%= f.text_area :body, class: "form-control" %>
    </div>

    <p>
      <%= f.button :submit, class: "btn btn-primary btn-lg active" %>
    </p>
<% end %>