<h1>Articles</h1>

<table class="table">
  <thead>
  <tr>
    <th><%= t('.admin_th_language') %></th>
    <th><%= t('.admin_th_title') %></th>
    <th><%= t('.admin_th_text') %></th>
    <th><%= t('.admin_th_slug') %></th>
    <th><%= t('.admin_th_category') %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.language %></td>
      <td><%= link_to admin_article_showAdmin_path(article) do %>
        <%= article.title %>
      <% end %></td>
      <td><%= article.text %></td>
      <td><%= article.slug %></td>
      <td><%= article.category.title %></td>
      <% if !article.online %>
        <td><%= link_to t('.admin_edit_article_link'), edit_admin_article_path(article), class: "btn btn-default btn-lg" %></td>
        <td><%= link_to t('.admin_destroy_article_link'), admin_article_path(article), method: :delete, data: { confirm: t('.admin_destroy_confirm_articles') }, class: "btn btn-danger btn-lg" %></td>
        <td><%= link_to t('.admin_publish_article_link'), admin_publish_article_path(article) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @collection, renderer: BootstrapPagination::Rails %>

<p><%= link_to t('.admin_add_article_link'), new_admin_article_path, class: "btn btn-default btn-lg" %></p>
